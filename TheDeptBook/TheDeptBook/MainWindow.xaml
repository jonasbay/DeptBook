<Window x:Class="TheDeptBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDeptBook"
        mc:Ignorable="d"
        Title="The Dept Book" Height="500" Width="800">
        <Window.DataContext>
            <local:MainWindowViewModel/>
        </Window.DataContext>
    <Grid>
        <DataGrid Name="DGListDepts" 
                  ItemsSource="{Binding Path=Deptors}"
                  SelectedItem="{Binding Path=CurrentDeptor}"
                  IsSynchronizedWithCurrentItem="True"
                  SelectedIndex="{Binding Path=CurrentIndex}"
                  HorizontalAlignment="Left" Height="390" 
                  VerticalAlignment="Top" Width="774" Margin="10,10,0,0"
                  >
        </DataGrid>
        <Button Name="btnAddDeptor" Content="Add" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="75" Margin="355,423,0,0"
                Command="{Binding Path=AddDeptorCommand}"/>
    </Grid>
</Window>
